<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Friends</h5>
                    <a href="/dashboard" class="btn btn-primary btn-sm">Back to Dashboard</a>
                </div>
                <div class="card-body">
                    <% if (currentUser.friends && currentUser.friends.length > 0) { %>
                        <div class="row">
                            <% currentUser.friends.forEach(friend => { %>
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="/images/<%= friend.profileImage %>" alt="Profile" class="rounded-circle me-3" style="width: 60px; height: 60px;">
                                                <div>
                                                    <h6 class="mb-0"><%= friend.username %></h6>
                                                    <% if (friend.bio) { %>
                                                        <p class="text-muted small mb-0"><%= friend.bio %></p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted mb-0">You don't have any friends yet.</p>
                            <a href="/dashboard" class="btn btn-primary mt-3">Find Friends</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 